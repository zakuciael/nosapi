{
  "name": "@nosapi/root",
  "description": "A monorepo with Tools and APIs for all things NosTale",
  "private": true,
  "packageManager": "pnpm@7.15.0",
  "type": "module",
  "engines": {
    "node": ">=14.16"
  },
  "keywords": [
    "nosapi",
    "api",
    "data",
    "tools",
    "nostale",
    "parser"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zakuciael/nosapi"
  },
  "contributors": [
    "Krzysztof Saczuk <me@krzysztofsaczuk.pl>",
    "Kamil Gorlikowski <kamil@gorlik.pl>"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "typecheck": "turbo typecheck --parallel",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "manypkg check && turbo lint --parallel",
    "lint:fix": "manypkg fix &&& turbo lint:fix --parallel",
    "format": "turbo format --parallel && prettier --write *.{cjs,md,json} --ignore-unknown --no-error-on-unmatched-pattern",
    "format:check": "turbo format:check --parallel && prettier --check *.{cjs,md,json} --ignore-unknown --no-error-on-unmatched-pattern",
    "check": "manypkg check && turbo lint typecheck format:check --parallel",
    "release": "changeset version && pnpm install --lockfile-only",
    "test": "turbo test --parallel"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@manypkg/cli": "^0.20.0",
    "@types/eslint": "^8.37.0",
    "@types/node": "18.16.16",
    "@types/prettier": "^2.7.2",
    "eslint": "^8.5.0",
    "eslint-config-neon": "^0.1.46",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "turbo": "^1.9.3",
    "typescript": "5.1.0-beta",
    "vercel": "^29.1.1",
    "vitest": "^0.31.0"
  }
}

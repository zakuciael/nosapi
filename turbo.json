{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", "**/tsconfig.json", "**tsup.config.ts"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"],
      "outputMode": "errors-only"
    },
    "@nosapi/website#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "public/**",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.css",
        "next.config.js",
        "tailwind.config.js",
        "postcss.config.js"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "outputMode": "full"
    },
    "lint": {
      "inputs": [
        "tsconfig.eslint.json",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.css",
        ".eslintrc.cjs",
        ".prettierignore",
        ".prettier.config.cjs"
      ],
      "outputMode": "errors-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}

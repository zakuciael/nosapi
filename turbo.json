{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", "**/tsconfig.json", "**/tsup.config.ts"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"]
    },
    "@nosapi/website#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "public/**",
        "src/**/*.{ts,tsx,css}",
        "next.config.{mjs,cjs,js}",
        "tailwind.config.{mjs,cjs,js,ts}",
        "postcss.config.{mjs,cjs,js}"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,css}",
        ".eslintrc.{mjs,cjs,js}",
        ".prettierignore",
        "prettier.config.{mjs,cjs,js}",
        "tsconfig.eslint.json"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,css}",
        "**/.eslintrc.{mjs,cjs,js}",
        "**/.prettierignore",
        "**/prettier.config.{mjs,cjs,js}",
        "**/tsconfig.eslint.json"
      ]
    },
    "format": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,css}",
        "**/.eslintrc.{mjs,cjs,js}",
        "**/tsconfig.eslint.json",
        "**/.prettierignore",
        "**/prettier.config.{mjs,cjs,js}"
      ]
    },
    "format:check": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,css}",
        "**/.eslintrc.{mjs,cjs,js}",
        "**/tsconfig.eslint.json",
        "**/.prettierignore",
        "**/prettier.config.{mjs,cjs,js}"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{ts,tsx,css}"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "__tests__/**/*.ts", "**/vitest.config.ts"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}

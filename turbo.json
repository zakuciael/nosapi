{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", "**/tsconfig.json", "**/tsup.config.ts"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"],
      "outputMode": "errors-only"
    },
    "@nosapi/website#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "public/**",
        "src/**/*.{ts,tsx,css}",
        "next.config.{mjs,cjs,js}",
        "tailwind.config.{mjs,cjs,js,ts}",
        "postcss.config.{mjs,cjs,js}"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "outputMode": "full"
    },
    "lint": {
      "inputs": [
        "src/**/*.{ts,tsx,css}",
        ".eslintrc.{mjs,cjs,js}",
        ".prettierignore",
        "prettier.config.{mjs,cjs,js}",
        "tsconfig.eslint.json"
      ],
      "outputMode": "errors-only"
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
